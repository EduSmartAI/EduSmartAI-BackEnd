      <ProjectReference Include="..\..\BaseService\BaseService.Application\BaseService.Application.csproj" />
      <ProjectReference Include="..\..\BaseService\BaseService.Common\BaseService.Common.csproj" />
      <ProjectReference Include="..\..\BaseService\BaseService.Domain\BaseService.Domain.csproj" />
